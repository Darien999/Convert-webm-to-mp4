{
  "name": "convert-webm-mp4",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Darien Romero",
  "build": {
    "appId": "com.darien.electronvideoconverter",
    "productName": "Convert WebM â†’ MP4",
    "files": [
      "Source/**/*",
      "Logics/**/*",
      "Styles/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0"
  }
}
